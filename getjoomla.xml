<project name="com_redcore" default="getjoomla2">
    <property name="repo.dir" value="${project.basedir}/tests/system/joomla-cms2/" />

    <resolvepath propertyName="repo.dir.resolved" file="${repo.dir}" />

        <target name="getjoomla2">
        <gitclone
        repository="https://github.com/joomla/joomla-cms.git"
        targetPath="${repo.dir.resolved}"
        bare="false"
                />

        <!-- create and switch to "develop" branch -->
        <gitcheckout
        repository="${repo.dir.resolved}"
        branchname="2.5.x" quiet="true" create="false" />
    </target>
</project>