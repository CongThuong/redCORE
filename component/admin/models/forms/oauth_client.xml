<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/libraries/redsource/form/fields">
        <field
            name="id"
            type="hidden"
            default="0"
            label="COM_REDCORE_ID_LABEL"
            description="COM_REDCORE_ID_DESC"
            readonly="true"
            />
        <field
                name="client_id"
                type="text"
                label="COM_REDCORE_OAUTH_CLIENTS_CLIENT_ID"
                description="COM_REDCORE_OAUTH_CLIENTS_CLIENT_ID_DESC"
                required="true"
                />
        <field
                name="client_secret"
                type="text"
                label="COM_REDCORE_OAUTH_CLIENTS_CLIENT_SECRET"
                description="COM_REDCORE_OAUTH_CLIENTS_CLIENT_SECRET_DESC"
                readonly="true"
                />
        <field
                name="redirect_uri"
                type="text"
                label="COM_REDCORE_OAUTH_CLIENTS_REDIRECT_URI"
                description="COM_REDCORE_OAUTH_CLIENTS_REDIRECT_URI_DESC"
                required="true"
                />
		<field
			name="grant_types"
			type="checkboxes"
			label="COM_REDCORE_OAUTH_CLIENTS_GRANT_TYPES"
			description="COM_REDCORE_OAUTH_CLIENTS_GRANT_TYPES_DESC"
			class="btn-group"
			default=""
			>
            <option value="authorization_code">Authorization Code</option>
			<option value="implicit">Implicit</option>
            <option value="password">User Credentials</option>
            <option value="client_credentials">Client Credentials</option>
            <option value="refresh_token">Refresh Token</option>
            <option value="jwt-bearer">JWT Bearer</option>
		</field>
        <field
                name="scope"
                type="text"
                label="COM_REDCORE_OAUTH_CLIENTS_SCOPE"
                description="COM_REDCORE_OAUTH_CLIENTS_SCOPE_DESC"
                />
		<field
			name="user_id"
			type="user"
			label="COM_REDCORE_OAUTH_CLIENTS_USER_ID"
			description="COM_REDCORE_OAUTH_CLIENTS_USER_ID_DESC"
			>
		</field>
	</fieldset>
</form>
