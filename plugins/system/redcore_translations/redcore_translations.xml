<extension version="2.5" type="plugin" group="system" method="upgrade">
    <name>PLG_SYSTEM_REDCORE_TRANSLATIONS</name>
    <author>redCOMPONENT</author>
    <creationDate>April 2014</creationDate>
    <copyright>Copyright (C) 2012 - 2014 redCOMPONENT.com. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>email@redcomponent.com</authorEmail>
    <authorUrl>www.redcomponent.com</authorUrl>
    <version>1.0.7</version>
    <description>PLG_SYSTEM_REDCORE_TRANSLATIONS_XML_DESCRIPTION</description>

    <files>
        <filename>index.html</filename>
        <filename plugin="redcore_translations">redcore_translations.php</filename>
    </files>

    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.plg_system_redcore_translations.ini</language>
        <language tag="en-GB">en-GB/en-GB.plg_system_redcore_translations.sys.ini</language>
        <language tag="da-DK">da-DK/da-DK.plg_system_redcore_translations.ini</language>
        <language tag="da-DK">da-DK/da-DK.plg_system_redcore_translations.sys.ini</language>
    </languages>

    <config>
        <fields name="params">
            <fieldset name="PLG_SYSTEM_REDCORE_TRANSLATIONS_OPTIONS">
                <field
                        name="show_edit_button_on_all_forms"
                        type="list"
                        default="0"
                        label="PLG_SYSTEM_REDCORE_TRANSLATIONS_SHOW_TRANSLATION_BUTTON"
                        description="PLG_SYSTEM_REDCORE_TRANSLATIONS_SHOW_TRANSLATION_BUTTON_DESC">
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
